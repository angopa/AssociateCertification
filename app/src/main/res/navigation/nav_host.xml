<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/view_pager_fragment">

    <fragment
        android:id="@+id/view_pager_fragment"
        android:name="com.angopa.aad.HomeViewPagerFragment"
        tools:layout="@layout/fragment_view_pager">

        <action
            android:id="@+id/action_android_core_to_toast_message"
            app:destination="@+id/toast_message_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/toast_message_fragment"
        android:name="com.angopa.aad.DetailFragment"
        android:label="Toast Message"
        tools:layout="@layout/fragment_detail">

        <argument android:name="linkUri"
            app:argType="string"/>

    </fragment>

</navigation>