<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_recycler_view"
    app:startDestination="@id/nav_dashboard">

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.angopa.aad.androidui.codelabs.recyclerview.RecyclerViewDashboardFragment"
        tools:layout="@layout/fragment_recycler_view_dashboard">

        <action
            android:id="@+id/action_dashboard_to_simple_recycler"
            app:destination="@+id/nav_simple_recycler_view"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_dashboard_to_recycler_animations"
            app:destination="@+id/nav_recycler_view_animations"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/nav_simple_recycler_view"
        android:name="com.angopa.aad.androidui.codelabs.recyclerview.SimpleRecyclerViewFragment"
        tools:layout="@layout/fragment_simple_recycler_view">

    </fragment>

    <fragment
        android:id="@+id/nav_recycler_view_animations"
        android:name="com.angopa.aad.androidui.codelabs.recyclerview.RecyclerViewAnimationsFragment"
        tools:layout="@layout/fragment_recycler_view_animations">

    </fragment>

</navigation>