<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.AAD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- enable overlapping of exiting and entering activities-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Declare customize background for windows -->
        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <!-- General style for Buttons -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="Theme.AAD" parent="Base.Theme.AAD" />

    <style name="Theme.AAD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AAD.AppbarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.AAD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AAD.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.AAD.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:backgroundTint">@color/colorBackgroundCard</item>
        <item name="cardElevation">@dimen/default_elevation</item>
        <item name="cardCornerRadius">@dimen/default_corner_radius</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- Button Styling   -->
    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LoseButton" parent="BaseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/lose_button</item>
        <item name="android:textColor">#FFE2DF</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
